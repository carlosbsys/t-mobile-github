<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/profile_item_avatar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/profile_item_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Carlos Bedoy"
        android:textColor="@color/black_primary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_item_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_item_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif"
        android:text="carlos.bedoy@gmail.com"
        android:textColor="@color/black_primary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_item_avatar"
        app:layout_constraintTop_toBottomOf="@+id/profile_item_nickname" />

    <TextView
        android:id="@+id/profile_item_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif"
        android:text="Santa Cruz, California"
        android:textColor="@color/black_hint"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_item_avatar"
        app:layout_constraintTop_toBottomOf="@+id/profile_item_email" />


    <LinearLayout
        android:id="@+id/profile_item_sub_container"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white_color"
        app:layout_constraintTop_toBottomOf="@+id/profile_item_avatar"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_margin="1dp"
            android:id="@+id/profile_item_join_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Join date"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@color/black_primary"
            android:gravity="center"
            android:textColor="@color/white_color"
            android:textSize="14sp" />

        <TextView
            android:layout_margin="1dp"
            android:id="@+id/profile_item_followers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Followers"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@color/black_primary"
            android:gravity="center"
            android:textColor="@color/white_color"
            android:textSize="14sp" />

        <TextView
            android:layout_margin="1dp"
            android:id="@+id/profile_item_following"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Following"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@color/black_primary"
            android:gravity="center"
            android:textColor="@color/white_color"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:padding="8dp"
        android:textSize="18sp"
        android:text="There's a lot of text about a description from one user from github. Please don'tt ignore"
        android:layout_width="match_parent"
        android:textColor="@color/black_primary"
        app:layout_constraintTop_toBottomOf="@+id/profile_item_sub_container"
        android:layout_height="wrap_content"/>





</androidx.constraintlayout.widget.ConstraintLayout>